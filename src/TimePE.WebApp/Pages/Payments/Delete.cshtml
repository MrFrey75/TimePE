@page
@model TimePE.WebApp.Pages.Payments.DeleteModel
@{
    ViewData["Title"] = "Delete Payment";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white py-3">
                    <h4 class="mb-0">
                        <i class="bi bi-trash"></i> Delete Payment
                    </h4>
                </div>
                <div class="card-body p-4">
                    @if (Model.Payment != null)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i>
                            <strong>Warning:</strong> This action cannot be undone!
                        </div>

                        <h5 class="mb-3">Are you sure you want to delete this payment?</h5>

                        <div class="card bg-light mb-4">
                            <div class="card-body text-center">
                                <h2 class="text-info mb-2">@Model.Payment.Amount.ToString("C")</h2>
                                <dl class="row mb-0 mt-3">
                                    <dt class="col-sm-6 text-end">Date:</dt>
                                    <dd class="col-sm-6 text-start">@Model.Payment.Date.ToString("MMMM dd, yyyy")</dd>

                                    @if (!string.IsNullOrWhiteSpace(Model.Payment.Notes))
                                    {
                                        <dt class="col-sm-6 text-end">Notes:</dt>
                                        <dd class="col-sm-6 text-start">@Model.Payment.Notes</dd>
                                    }
                                </dl>
                            </div>
                        </div>

                        <form method="post">
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <a asp-page="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Delete Payment
                                </button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
