@page
@model TimePE.WebApp.Pages.Payments.IndexModel
@{
    ViewData["Title"] = "Payments";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-6 fw-bold text-primary">
                <i class="bi bi-wallet2"></i> Payments
            </h1>
            <p class="text-muted">Track payments received</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-page="Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle"></i> New Payment
            </a>
        </div>
    </div>

    <!-- Summary Card -->
    <div class="card border-0 shadow-sm bg-info text-white mb-4">
        <div class="card-body text-center py-4">
            <h6 class="text-white-50 mb-2">Total Payments Received</h6>
            <h2 class="mb-0">@Model.TotalPaid.ToString("C")</h2>
        </div>
    </div>

    <!-- Payments Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header py-3">
            <h5 class="mb-0"><i class="bi bi-list-ul"></i> Payment History</h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Payments.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Date</th>
                                <th>Notes</th>
                                <th class="text-end">Amount</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var payment in Model.Payments.OrderByDescending(p => p.Date))
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-light text-dark">
                                            <i class="bi bi-calendar3"></i>
                                            @payment.Date.ToString("MMM dd, yyyy")
                                        </span>
                                    </td>
                                    <td>@(payment.Notes ?? "â€”")</td>
                                    <td class="text-end">
                                        <strong class="text-info">@payment.Amount.ToString("C")</strong>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-page="Edit" asp-route-id="@payment.Oid" class="btn btn-outline-primary">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-page="Delete" asp-route-id="@payment.Oid" class="btn btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <th colspan="2" class="text-end">Total:</th>
                                <th class="text-end text-info">@Model.TotalPaid.ToString("C")</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
            else
            {
                <div class="p-5 text-center text-muted">
                    <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                    <h5>No Payments</h5>
                    <p>You haven't recorded any payments yet.</p>
                    <a asp-page="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Record First Payment
                    </a>
                </div>
            }
        </div>
    </div>
</div>
