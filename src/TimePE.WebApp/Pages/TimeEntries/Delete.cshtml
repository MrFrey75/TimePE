@page
@model TimePE.WebApp.Pages.TimeEntries.DeleteModel
@{
    ViewData["Title"] = "Delete Time Entry";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white py-3">
                    <h4 class="mb-0">
                        <i class="bi bi-trash"></i> Delete Time Entry
                    </h4>
                </div>
                <div class="card-body p-4">
                    @if (Model.TimeEntry != null)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i>
                            <strong>Warning:</strong> This action cannot be undone!
                        </div>

                        <h5 class="mb-3">Are you sure you want to delete this time entry?</h5>

                        <dl class="row">
                            <dt class="col-sm-4">Date</dt>
                            <dd class="col-sm-8">@Model.TimeEntry.Date.ToString("MMMM dd, yyyy")</dd>

                            <dt class="col-sm-4">Project</dt>
                            <dd class="col-sm-8">@(Model.TimeEntry.Project?.Name ?? "N/A")</dd>

                            <dt class="col-sm-4">Time</dt>
                            <dd class="col-sm-8">
                                @Model.TimeEntry.StartTime.ToString(@"hh\:mm") - @Model.TimeEntry.EndTime.ToString(@"hh\:mm")
                                <span class="badge bg-primary ms-2">@Model.TimeEntry.Duration.ToString(@"h\h\ mm\m")</span>
                            </dd>

                            <dt class="col-sm-4">Amount</dt>
                            <dd class="col-sm-8">
                                <strong class="text-success">@Model.TimeEntry.AmountOwed.ToString("C")</strong>
                            </dd>

                            @if (!string.IsNullOrWhiteSpace(Model.TimeEntry.Notes))
                            {
                                <dt class="col-sm-4">Notes</dt>
                                <dd class="col-sm-8">@Model.TimeEntry.Notes</dd>
                            }
                        </dl>

                        <form method="post">
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <a asp-page="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Delete Entry
                                </button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
