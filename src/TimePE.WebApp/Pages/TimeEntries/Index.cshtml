@page
@model TimePE.WebApp.Pages.TimeEntries.IndexModel
@{
    ViewData["Title"] = "Time Entries";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-6 fw-bold text-primary">
                <i class="bi bi-clock"></i> Time Entries
            </h1>
            <p class="text-muted">Manage your time tracking records</p>
        </div>
        <div class="col-md-4 text-end">
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-file-earmark-arrow-down"></i> Import/Export
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li>
                        <button type="button" class="dropdown-item" data-bs-toggle="modal" data-bs-target="#importModal">
                            <i class="bi bi-upload"></i> Import CSV
                        </button>
                    </li>
                    <li>
                        <form method="post" asp-page-handler="Export" class="d-inline">
                            <input type="hidden" name="startDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" />
                            <input type="hidden" name="endDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" />
                            <button type="submit" class="dropdown-item">
                                <i class="bi bi-download"></i> Export to CSV
                            </button>
                        </form>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <a asp-page-handler="DownloadSample" class="dropdown-item">
                            <i class="bi bi-file-earmark-text"></i> Download Sample CSV
                        </a>
                    </li>
                </ul>
            </div>
            <a asp-page="Create" class="btn btn-primary btn-lg ms-2">
                <i class="bi bi-plus-circle"></i> New Time Entry
            </a>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ImportMessage))
    {
        <div class="alert @(Model.ImportSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
            <i class="bi @(Model.ImportSuccess ? "bi-check-circle-fill" : "bi-exclamation-triangle-fill")"></i> @Model.ImportMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Date Filter -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="startDate" class="form-label">Start Date</label>
                    <input type="date" class="form-control" id="startDate" name="startDate" 
                           value="@Model.StartDate.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-4">
                    <label for="endDate" class="form-label">End Date</label>
                    <input type="date" class="form-control" id="endDate" name="endDate" 
                           value="@Model.EndDate.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-4">
                    <label class="form-label">&nbsp;</label>
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-funnel"></i> Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Time Entries Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header py-3">
            <h5 class="mb-0">
                <i class="bi bi-list-ul"></i> Entries from @Model.StartDate.ToString("MMM dd, yyyy") to @Model.EndDate.ToString("MMM dd, yyyy")
            </h5>
        </div>
        <div class="card-body p-0">
            @if (Model.TimeEntries.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Date</th>
                                <th>Project</th>
                                <th>Start Time</th>
                                <th>End Time</th>
                                <th class="text-center">Duration</th>
                                <th class="text-end">Pay Rate</th>
                                <th class="text-end">Amount</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var entry in Model.TimeEntries)
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-light text-dark">
                                            <i class="bi bi-calendar3"></i>
                                            @entry.Date.ToString("MMM dd, yyyy")
                                        </span>
                                    </td>
                                    <td>
                                        <strong class="text-primary">@(entry.Project?.Name ?? "N/A")</strong>
                                    </td>
                                    <td class="text-muted">@entry.StartTime.ToString(@"hh\:mm")</td>
                                    <td class="text-muted">@entry.EndTime.ToString(@"hh\:mm")</td>
                                    <td class="text-center">
                                        <span class="badge bg-primary">
                                            @entry.Duration.ToString(@"h\h\ mm\m")
                                        </span>
                                    </td>
                                    <td class="text-end text-muted">@entry.AppliedPayRate.ToString("C")/hr</td>
                                    <td class="text-end">
                                        <strong class="text-success">@entry.AmountOwed.ToString("C")</strong>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-page="Edit" asp-route-id="@entry.Oid" class="btn btn-outline-primary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-page="Delete" asp-route-id="@entry.Oid" class="btn btn-outline-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                @if (!string.IsNullOrWhiteSpace(entry.Notes))
                                {
                                    <tr class="table-light">
                                        <td colspan="8" class="small text-muted">
                                            <i class="bi bi-chat-left-text"></i> <em>@entry.Notes</em>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <th colspan="4" class="text-end">Totals:</th>
                                <th class="text-center">
                                    <span class="badge bg-secondary">
                                        @TimeSpan.FromHours((double)Model.TimeEntries.Sum(e => e.Duration.TotalHours)).ToString(@"h\h\ mm\m")
                                    </span>
                                </th>
                                <th></th>
                                <th class="text-end">
                                    <strong class="text-success">@Model.TimeEntries.Sum(e => e.AmountOwed).ToString("C")</strong>
                                </th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
            else
            {
                <div class="p-5 text-center text-muted">
                    <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                    <h5>No time entries found</h5>
                    <p>No entries found for the selected date range.</p>
                    <a asp-page="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create Your First Entry
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Import CSV Modal -->
<div class="modal fade" id="importModal" tabindex="-1" aria-labelledby="importModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="importModalLabel">
                    <i class="bi bi-upload"></i> Import Time Entries from CSV
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-page-handler="Import" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="csvFile" class="form-label">Select CSV File</label>
                        <input type="file" class="form-control" id="csvFile" name="CsvFile" accept=".csv" required />
                        <div class="form-text">
                            <i class="bi bi-info-circle"></i> Upload a CSV file with time entries. 
                            <a asp-page-handler="DownloadSample">Download sample template</a>
                        </div>
                    </div>
                    <div class="alert alert-info">
                        <strong>CSV Format:</strong>
                        <ul class="mb-0 mt-2">
                            <li>Date: YYYY-MM-DD format</li>
                            <li>Project: Project name (will be created if doesn't exist)</li>
                            <li>Start Time: HH:MM format (24-hour)</li>
                            <li>End Time: HH:MM format (24-hour)</li>
                            <li>Notes: Optional</li>
                        </ul>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-upload"></i> Import
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
