@page
@model TimePE.WebApp.Pages.PayRates.IndexModel
@{
    ViewData["Title"] = "Pay Rates";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-6 fw-bold text-primary">
                <i class="bi bi-cash-stack"></i> Pay Rates
            </h1>
            <p class="text-muted">Manage your hourly pay rates</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-page="Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle"></i> New Pay Rate
            </a>
        </div>
    </div>

    @if (Model.CurrentPayRate != null)
    {
        <div class="alert alert-success shadow-sm mb-4">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h5 class="alert-heading mb-2">
                        <i class="bi bi-check-circle"></i> Current Pay Rate
                    </h5>
                    <h2 class="mb-0">@Model.CurrentPayRate.HourlyRate.ToString("C")<small class="text-muted fs-6">/hour</small></h2>
                    <small>Effective since @Model.CurrentPayRate.EffectiveDate.ToString("MMMM dd, yyyy")</small>
                </div>
                <div class="col-md-4 text-md-end">
                    <span class="badge bg-success fs-6">ACTIVE</span>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning mb-4">
            <i class="bi bi-exclamation-triangle"></i>
            <strong>No active pay rate!</strong> Please create a pay rate to start tracking time.
        </div>
    }

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0">
                <i class="bi bi-clock-history"></i> Pay Rate History
            </h5>
        </div>
        <div class="card-body p-0">
            @if (Model.PayRates.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Rate</th>
                                <th>Effective Date</th>
                                <th>End Date</th>
                                <th>Status</th>
                                <th class="text-center">Duration</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var rate in Model.PayRates)
                            {
                                var isCurrent = rate.EndDate == null;
                                var duration = rate.EndDate.HasValue 
                                    ? (rate.EndDate.Value - rate.EffectiveDate).Days 
                                    : (DateTime.Today - rate.EffectiveDate).Days;

                                <tr class="@(isCurrent ? "table-success" : "")">
                                    <td>
                                        <h5 class="mb-0 text-primary">@rate.HourlyRate.ToString("C")</h5>
                                        <small class="text-muted">/hour</small>
                                    </td>
                                    <td>
                                        <i class="bi bi-calendar-check text-success"></i>
                                        @rate.EffectiveDate.ToString("MMM dd, yyyy")
                                    </td>
                                    <td>
                                        @if (rate.EndDate.HasValue)
                                        {
                                            <i class="bi bi-calendar-x text-danger"></i>
                                            @rate.EndDate.Value.ToString("MMM dd, yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">â€”</span>
                                        }
                                    </td>
                                    <td>
                                        @if (isCurrent)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Current
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-archive"></i> Historical
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center text-muted">
                                        @duration days
                                    </td>
                                    <td class="text-center">
                                        <a asp-page="Delete" asp-route-id="@rate.Oid" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="p-5 text-center text-muted">
                    <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                    <h5>No Pay Rates</h5>
                    <p>You haven't set up any pay rates yet.</p>
                    <a asp-page="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create Your First Pay Rate
                    </a>
                </div>
            }
        </div>
    </div>

    <div class="alert alert-info mt-4">
        <i class="bi bi-info-circle"></i>
        <strong>Note:</strong> Creating a new pay rate will automatically end-date the current rate. Historical rates are preserved for existing time entries.
    </div>
</div>
