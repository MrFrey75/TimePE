@page
@model TimePE.WebApp.Pages.Projects.DeleteModel
@{
    ViewData["Title"] = "Delete Project";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white py-3">
                    <h4 class="mb-0">
                        <i class="bi bi-trash"></i> Delete Project
                    </h4>
                </div>
                <div class="card-body p-4">
                    @if (Model.Project != null)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i>
                            <strong>Warning:</strong> This will soft-delete the project. Time entries will be preserved.
                        </div>

                        <h5 class="mb-3">Are you sure you want to delete this project?</h5>

                        <dl class="row">
                            <dt class="col-sm-4">Project Name</dt>
                            <dd class="col-sm-8"><strong>@Model.Project.Name</strong></dd>

                            @if (!string.IsNullOrWhiteSpace(Model.Project.Description))
                            {
                                <dt class="col-sm-4">Description</dt>
                                <dd class="col-sm-8">@Model.Project.Description</dd>
                            }

                            <dt class="col-sm-4">Status</dt>
                            <dd class="col-sm-8">
                                <span class="badge @(Model.Project.IsActive ? "bg-success" : "bg-secondary")">
                                    @(Model.Project.IsActive ? "Active" : "Inactive")
                                </span>
                            </dd>

                            <dt class="col-sm-4">Time Entries</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-primary">@Model.Project.TimeEntriesCount entries</span>
                            </dd>
                        </dl>

                        <form method="post">
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <a asp-page="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Delete Project
                                </button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
