@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold text-primary">
                <i class="bi bi-speedometer2"></i> Dashboard
            </h1>
            <p class="text-muted">Track your time and balance</p>
        </div>
    </div>

    @if (Model.BalanceSummary != null)
    {
        <!-- Balance Summary Cards -->
        <div class="row g-4 mb-4">
            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Current Balance</h6>
                                <h3 class="mb-0 @(Model.BalanceSummary.CurrentBalance >= 0 ? "text-success" : "text-danger")">
                                    @Model.BalanceSummary.CurrentBalance.ToString("C")
                                </h3>
                            </div>
                            <div class="fs-1 @(Model.BalanceSummary.CurrentBalance >= 0 ? "text-success" : "text-danger") opacity-25">
                                <i class="bi @(Model.BalanceSummary.CurrentBalance >= 0 ? "bi-cash-stack" : "bi-exclamation-triangle")"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Total Owed</h6>
                                <h3 class="mb-0 text-primary">@Model.BalanceSummary.TotalOwed.ToString("C")</h3>
                            </div>
                            <div class="fs-1 text-primary opacity-25">
                                <i class="bi bi-piggy-bank"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Total Paid</h6>
                                <h3 class="mb-0 text-info">@Model.BalanceSummary.TotalPaid.ToString("C")</h3>
                            </div>
                            <div class="fs-1 text-info opacity-25">
                                <i class="bi bi-wallet2"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Total Hours</h6>
                                <h3 class="mb-0 text-secondary">@Model.BalanceSummary.TotalHoursWorked.ToString("N1")</h3>
                            </div>
                            <div class="fs-1 text-secondary opacity-25">
                                <i class="bi bi-clock-history"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Weekly Hours -->
        <div class="row g-4 mb-4">
            <div class="col-md-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-3">
                            <i class="bi bi-calendar-week text-primary"></i> This Week
                        </h5>
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <div class="progress" style="height: 25px;">
                                    <div class="progress-bar bg-primary" role="progressbar" 
                                         style="width: @(Math.Min(100, (double)Model.ThisWeekHours / 40 * 100))%" 
                                         aria-valuenow="@Model.ThisWeekHours" aria-valuemin="0" aria-valuemax="40">
                                        @Model.ThisWeekHours.ToString("N1") hrs
                                    </div>
                                </div>
                            </div>
                            <div class="ms-3 text-muted">
                                / 40 hrs
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-3">
                            <i class="bi bi-calendar-check text-secondary"></i> Last Week
                        </h5>
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <div class="progress" style="height: 25px;">
                                    <div class="progress-bar bg-secondary" role="progressbar" 
                                         style="width: @(Math.Min(100, (double)Model.LastWeekHours / 40 * 100))%" 
                                         aria-valuenow="@Model.LastWeekHours" aria-valuemin="0" aria-valuemax="40">
                                        @Model.LastWeekHours.ToString("N1") hrs
                                    </div>
                                </div>
                            </div>
                            <div class="ms-3 text-muted">
                                / 40 hrs
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row g-4">
        <!-- Recent Time Entries -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-clock text-primary"></i> Recent Time Entries
                        </h5>
                        <a href="/TimeEntries" class="btn btn-sm btn-outline-primary">
                            View All <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (Model.RecentTimeEntries.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Date</th>
                                        <th>Project</th>
                                        <th>Time</th>
                                        <th class="text-end">Duration</th>
                                        <th class="text-end">Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var entry in Model.RecentTimeEntries)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-light text-dark">
                                                    @entry.Date.ToString("MMM dd, yyyy")
                                                </span>
                                            </td>
                                            <td>
                                                <strong>@(entry.Project?.Name ?? "N/A")</strong>
                                            </td>
                                            <td class="text-muted small">
                                                @entry.StartTime.ToString(@"hh\:mm") - @entry.EndTime.ToString(@"hh\:mm")
                                            </td>
                                            <td class="text-end">
                                                <span class="badge bg-primary">
                                                    @entry.Duration.ToString(@"h\h\ mm\m")
                                                </span>
                                            </td>
                                            <td class="text-end fw-bold text-success">
                                                @entry.AmountOwed.ToString("C")
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="p-5 text-center text-muted">
                            <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                            <p>No time entries yet. <a href="/TimeEntries/Create">Create your first entry</a></p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Project Hours Summary & Quick Actions -->
        <div class="col-lg-4">
            <!-- Quick Actions -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-lightning text-warning"></i> Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="/TimeEntries/Create" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> New Time Entry
                        </a>
                        <a href="/Projects" class="btn btn-outline-secondary">
                            <i class="bi bi-folder"></i> Manage Projects
                        </a>
                        <a href="/PayRates" class="btn btn-outline-secondary">
                            <i class="bi bi-cash"></i> Pay Rates
                        </a>
                        <a href="/Reports" class="btn btn-outline-secondary">
                            <i class="bi bi-file-earmark-text"></i> Generate Report
                        </a>
                    </div>
                </div>
            </div>

            <!-- Project Hours (Last 30 Days) -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-pie-chart text-info"></i> Project Hours (30 Days)
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.ProjectHours.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var project in Model.ProjectHours.OrderByDescending(p => p.Value).Take(5))
                            {
                                var percentage = Model.ProjectHours.Sum(p => p.Value) > 0 
                                    ? (double)project.Value / (double)Model.ProjectHours.Sum(p => p.Value) * 100 
                                    : 0;
                                
                                <div class="list-group-item px-0 border-0">
                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <span class="fw-medium">@project.Key</span>
                                        <span class="text-muted">@project.Value.ToString("N1") hrs</span>
                                    </div>
                                    <div class="progress" style="height: 8px;">
                                        <div class="progress-bar" role="progressbar" 
                                             style="width: @percentage%"></div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="bi bi-graph-down fs-2 d-block mb-2"></i>
                            <small>No project hours logged</small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        .card {
            transition: transform 0.2s;
        }
        .card:hover {
            transform: translateY(-2px);
        }
        .progress-bar {
            transition: width 0.3s ease;
        }
    </style>
}
