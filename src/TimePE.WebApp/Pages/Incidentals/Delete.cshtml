@page
@model TimePE.WebApp.Pages.Incidentals.DeleteModel
@{
    ViewData["Title"] = "Delete Incidental";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white py-3">
                    <h4 class="mb-0">
                        <i class="bi bi-trash"></i> Delete Incidental
                    </h4>
                </div>
                <div class="card-body p-4">
                    @if (Model.Incidental != null)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i>
                            <strong>Warning:</strong> This action cannot be undone!
                        </div>

                        <h5 class="mb-3">Are you sure you want to delete this incidental?</h5>

                        <dl class="row">
                            <dt class="col-sm-4">Date</dt>
                            <dd class="col-sm-8">@Model.Incidental.Date.ToString("MMMM dd, yyyy")</dd>

                            <dt class="col-sm-4">Description</dt>
                            <dd class="col-sm-8">@Model.Incidental.Description</dd>

                            <dt class="col-sm-4">Type</dt>
                            <dd class="col-sm-8">
                                <span class="badge @(Model.Incidental.Type == IncidentalType.Owed ? "bg-success" : "bg-warning")">
                                    @Model.Incidental.Type
                                </span>
                            </dd>

                            <dt class="col-sm-4">Amount</dt>
                            <dd class="col-sm-8">
                                <strong class="@(Model.Incidental.Type == IncidentalType.Owed ? "text-success" : "text-warning")">
                                    @Model.Incidental.Amount.ToString("C")
                                </strong>
                            </dd>
                        </dl>

                        <form method="post">
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <a asp-page="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Delete Incidental
                                </button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
