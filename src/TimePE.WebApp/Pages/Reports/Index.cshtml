@page
@model TimePE.WebApp.Pages.Reports.IndexModel
@{
    ViewData["Title"] = "Reports";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-6 fw-bold text-primary">
                <i class="bi bi-file-earmark-text"></i> Reports
            </h1>
            <p class="text-muted">Generate detailed time and payment reports</p>
        </div>
    </div>

    <!-- Date Range Selector -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form method="post">
                <div class="row g-3 align-items-end">
                    <div class="col-md-4">
                        <label asp-for="StartDate" class="form-label">Start Date</label>
                        <input asp-for="StartDate" class="form-control" type="date" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="EndDate" class="form-label">End Date</label>
                        <input asp-for="EndDate" class="form-control" type="date" />
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-funnel"></i> Generate Report
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <h6 class="text-muted">Total Hours</h6>
                    <h3 class="text-primary">@Model.TotalHours.ToString("N1")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <h6 class="text-muted">Total Earned</h6>
                    <h3 class="text-success">@Model.TotalEarned.ToString("C")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <h6 class="text-muted">Total Paid</h6>
                    <h3 class="text-info">@Model.TotalPaid.ToString("C")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <h6 class="text-muted">Net Balance</h6>
                    <h3 class="@(Model.NetBalance >= 0 ? "text-success" : "text-danger")">
                        @Model.NetBalance.ToString("C")
                    </h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Report Period Header -->
    <div class="alert alert-info mb-4">
        <i class="bi bi-calendar-range"></i>
        <strong>Report Period:</strong> @Model.StartDate.ToString("MMMM dd, yyyy") to @Model.EndDate.ToString("MMMM dd, yyyy")
    </div>

    <!-- Time Entries Table -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0"><i class="bi bi-clock"></i> Time Entries</h5>
        </div>
        <div class="card-body p-0">
            @if (Model.TimeEntries.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Date</th>
                                <th>Project</th>
                                <th>Time</th>
                                <th class="text-end">Duration</th>
                                <th class="text-end">Rate</th>
                                <th class="text-end">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var entry in Model.TimeEntries)
                            {
                                <tr>
                                    <td>@entry.Date.ToString("MMM dd")</td>
                                    <td>@(entry.Project?.Name ?? "N/A")</td>
                                    <td class="text-muted small">
                                        @entry.StartTime.ToString(@"hh\:mm") - @entry.EndTime.ToString(@"hh\:mm")
                                    </td>
                                    <td class="text-end">@entry.Duration.ToString(@"h\h\ mm\m")</td>
                                    <td class="text-end">@entry.AppliedPayRate.ToString("C")/hr</td>
                                    <td class="text-end fw-bold text-success">@entry.AmountOwed.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <th colspan="3" class="text-end">Totals:</th>
                                <th class="text-end">@TimeSpan.FromHours((double)Model.TotalHours).ToString(@"h\h\ mm\m")</th>
                                <th></th>
                                <th class="text-end text-success">@Model.TotalEarned.ToString("C")</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
            else
            {
                <div class="p-4 text-center text-muted">No time entries for this period</div>
            }
        </div>
    </div>

    <!-- Project Hours Breakdown -->
    @if (Model.ProjectHours.Any())
    {
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0"><i class="bi bi-pie-chart"></i> Project Breakdown</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    @foreach (var project in Model.ProjectHours.OrderByDescending(p => p.Value))
                    {
                        var percentage = Model.TotalHours > 0 ? (double)project.Value / (double)Model.TotalHours * 100 : 0;
                        <div class="col-md-6 mb-3">
                            <div class="d-flex justify-content-between mb-1">
                                <span class="fw-medium">@project.Key</span>
                                <span class="text-muted">@project.Value.ToString("N1") hrs (@percentage.ToString("N0")%)</span>
                            </div>
                            <div class="progress">
                                <div class="progress-bar" style="width: @percentage%"></div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <!-- Incidentals & Payments -->
    <div class="row g-4 mb-4">
        @if (Model.Incidentals.Any())
        {
            <div class="col-md-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0"><i class="bi bi-receipt"></i> Incidentals</h5>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-sm mb-0">
                            <tbody>
                                @foreach (var incidental in Model.Incidentals)
                                {
                                    <tr>
                                        <td>@incidental.Date.ToString("MMM dd")</td>
                                        <td>@incidental.Description</td>
                                        <td class="text-end">
                                            <span class="badge @(incidental.Type == IncidentalType.Owed ? "bg-success" : "bg-warning")">
                                                @incidental.Type
                                            </span>
                                        </td>
                                        <td class="text-end fw-bold">@incidental.Amount.ToString("C")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }

        @if (Model.Payments.Any())
        {
            <div class="col-md-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0"><i class="bi bi-wallet2"></i> Payments</h5>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-sm mb-0">
                            <tbody>
                                @foreach (var payment in Model.Payments)
                                {
                                    <tr>
                                        <td>@payment.Date.ToString("MMM dd")</td>
                                        <td>@(payment.Notes ?? "Payment")</td>
                                        <td class="text-end fw-bold text-info">@payment.Amount.ToString("C")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Print Button -->
    <div class="text-center">
        <button onclick="window.print()" class="btn btn-outline-primary btn-lg">
            <i class="bi bi-printer"></i> Print Report
        </button>
    </div>
</div>

@section Styles {
<style>
    @@media print {
        .btn, nav, footer { display: none; }
        .card { border: 1px solid #ddd !important; box-shadow: none !important; }
    }
</style>
}
